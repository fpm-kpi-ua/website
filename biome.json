{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"**/build/**",
			".output/**",
			".vinxi/**",
			"public/**",
			"**/*.css"
		]
	},
	"formatter": {
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "error"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"useJsxKeyInIterable": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
