{
	"tab_size": 2,
	"hard_tabs": true,
	"formatter": "auto",
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"language_servers": ["!eslint", "biome", "..."],
	"language_overrides": {
		"JavaScript": {
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": [
						"check",
						"--stdin-file-path",
						"{buffer_path}",
						"--apply-unsafe"
					]
				}
			}
		},
		"TypeScript": {
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": [
						"check",
						"--stdin-file-path",
						"{buffer_path}",
						"--apply-unsafe"
					]
				}
			}
		},
		"TSX": {
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": [
						"check",
						"--stdin-file-path",
						"{buffer_path}",
						"--apply-unsafe"
					]
				}
			}
		},
		"JSON": {
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": [
						"check",
						"--stdin-file-path",
						"{buffer_path}",
						"--apply-unsafe"
					]
				}
			}
		}
	}
}
